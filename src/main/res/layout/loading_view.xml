<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/loading_content_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loading_error_tipTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_757575"
            android:textSize="20sp"
            tool:text="暂无数据" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- <ImageView
                 android:id="@+id/loading_img_iv"
                 android:layout_width="@dimen/dp_30"
                 android:layout_height="@dimen/dp_30"
                 android:background="@drawable/loading_frame"
                 android:scaleType="fitXY" />-->

            <com.cai.framework.widget.CircleProgressBar
                android:id="@+id/loading_pro_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:mlpb_enable_circle_background="false"
                app:mlpb_progress_color="#a9a9a9"
                app:mlpb_progress_stoke_width="3dp" />

            <TextView
                android:id="@+id/loading_tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textColor="@color/gray_A9A9A9"
                android:textSize="16sp"
                tool:text="测试很长的文字" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>